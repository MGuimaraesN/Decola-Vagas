datasource db {
  provider = "mysql" // Verifique se est√° "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  ip        String
  lastLogin DateTime?
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  job       Job[]
}

model Job { 
  id           Int      @id @default(autoincrement())
  authorId     Int
  author       User     @relation(fields: [authorId], references: [id])
  title        String
  email        String
  telephone    String
  description  String
  areaId       Int      
  area         Area     @relation(fields: [areaId], references: [id])
  categoryId   Int
  category     Category @relation(fields: [categoryId], references: [id])
  status       String
  ip           String
  lastLogin    DateTime?
  updatedAt    DateTime @updatedAt
  createdAt    DateTime @default(now())
}

model Category {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  job       Job[]
}

model Area {
  id        Int      @id @default(autoincrement())
  name      String
  job       Job[]
}